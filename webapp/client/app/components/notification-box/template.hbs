<button {{action 'toggleBox'}} class="badge toggleNotificationBox">{{session.unseenSubscriptions.length}}</button>
{{#if showDropdown}}
<div class="content">
	{{#each session.subscriptions as |subscription|}}
		<div class="notification">
			{{#if subscription.likeNotification}}
			Entry in {{link-to subscription.entry.pile.project.name 'project.index.entries' subscription.entry.pile.project}}:
			{{subscription.likeNotification}}
			{{/if}}
		</div>
	{{/each}}
</div>
{{/if}}
